{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@features/*": ["src/features/*"],
      "@routes/*": ["src/routes/*"],
      "@components/*": ["src/features/common/components/*"],
      "@constants/*": ["src/features/common/constants/*"],
      "@helpers/*": ["src/features/common/helpers/*"],
      "@data/*": ["src/features/common/data/*"],
      "@hooks/*": ["src/features/common/hooks/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],

}
